{
    "compilerOptions": {
        "declaration": true,
        "composite": true,
        "incremental": true,
        "noResolve": false,
        "module": "ES2015",
        "moduleResolution": "bundler",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["DOM", "ESNext"],
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "tabster": ["src/"]
        }
    },
    "exclude": ["dist", "node_modules"]
}
